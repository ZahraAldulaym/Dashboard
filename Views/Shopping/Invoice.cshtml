@model Invoice
@{
    Layout = "~/Views/Shared/_LayoutShopping.cshtml";
}


<section style="background-color: #eee;">
    <div class="card">
        <div class="card-body mx-4">
            <div class="container">
                <p class="my-5 mx-5" style="font-size: 30px;">شكرا لتسوقك</p>
                <div class="row">
                    <ul class="list-unstyled">
                        <li class="text-black">@Model.CustomerId</li>
                        <li class="text-muted mt-1"><span class="text-black">فاتورة الطلب</span> #12345</li>
                        <li class="text-black mt-1">April 17 2021</li>
                    </ul>
                    <hr>
                    <div class="col-xl-10">
                        <p>@Model.ProductName</p>
                    </div>
                    <div class="col-xl-2">
                        <p class="float-end">
                            @Model.Price
                        </p>
                    </div>
                    <hr>
                </div>
                <div class="row">
                    <div class="col-xl-10">
                        <p>الشحن</p>
                    </div>
                    <div class="col-xl-2">
                        <p class="float-end">
                            مجانا
                        </p>
                    </div>
                    <hr>
                </div>
                <div class="row">
                    <div class="col-xl-10">
                        <p>الضريبة</p>
                    </div>
                    <div class="col-xl-2">
                        <p class="float-end">
                            @Model.Tax
                        </p>
                    </div>
                    <hr style="border: 2px solid black;">
                </div>
                <div class="row text-black">

                    <div class="col-xl-12">
                        <p class="float-end fw-bold">
                            المجموع: @Model.Total
                        </p>
                    </div>
                    <hr style="border: 2px solid black;">
                </div>

            </div>
        </div>
    </div>
</section>



